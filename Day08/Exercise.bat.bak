Sum: 15
multiplication: 120

echo "Enter the numbers: "
read -a numbers

sum_results=0
mul_results=1

for number in "${numbers[@]}"
do
   sum_results=$(($sum_results + $number))
   mul_results=$(($mul_results * $number))
done

